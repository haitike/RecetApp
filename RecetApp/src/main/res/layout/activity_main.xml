<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecipes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_frame"
        app:layout_constraintWidth_percent="0.25"
        android:text="🍽️"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnPlanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnShoppingList"
        app:layout_constraintStart_toEndOf="@+id/btnRecipes"
        app:layout_constraintTop_toBottomOf="@+id/main_frame"
        app:layout_constraintWidth_percent="0.25"
        android:text="🗓️"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnShoppingList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSettings"
        app:layout_constraintStart_toEndOf="@+id/btnPlanner"
        app:layout_constraintTop_toBottomOf="@+id/main_frame"
        app:layout_constraintWidth_percent="0.25"
        android:text="🛒️"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnShoppingList"
        app:layout_constraintTop_toBottomOf="@+id/main_frame"
        app:layout_constraintWidth_percent="0.25"
        android:text="⚙️"
        android:textSize="24sp" />

</androidx.constraintlayout.widget.ConstraintLayout>